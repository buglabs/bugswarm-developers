!!! 5
html(lang='en')
  head
    script(src='http://cdn.buglabs.net/swarm/swarm-v0.3.0.js')
    script(src='http://maps.googleapis.com/maps/api/js?sensor=false')
    include includes/assets
    script(src="js/bugstats.js", type="text/javascript")
    link(rel='stylesheet', href='css/bugstats.css')

  body(onload="mapInitialize()")

    // NAVIGATION
    include includes/navigation
          
    // CONTENT
    .bugstats.container

      #header
        // Header
        h1 BUGstats
        p
          | Using 
          a(href='http://developer.bugswarm.net') BUGswarm
          | , an M2M cloud messaging platform built by 
          a(href='http://buglabs.net') Bug Labs
          | , this application allows you to monitor the vital
          | statistics of each BUG in your swarm.

      #swarm-overview
        h1 Swarm Overview
        #swarm-info
        .page-header
        h3#aggregate-head Averages:
        #aggregate-stats
          .row
            .span-smallstats
              h4 User %              
              ul.unstyled
                li.aggregate-data#aggregate-usr Pending
            .span-smallstats
              h4 Nice %
              ul.unstyled
                li.aggregate-data#aggregate-nice Pending
            .span-smallstats
              h4 System %
              ul.unstyled
                li.aggregate-data#aggregate-sys Pending
            .span-datetime
              h4 Datetime
              ul.unstyled
                li.aggregate-data#aggregate-datetime Pending
   
      #divider
        .page-header

      #resources
        h1 Members
        #controls
          input(class="btn danger disabled", disabled="disabled", id="get-immediate-stats", type="button", value="Update All", onclick="javascript: getImmediateStats()")
          br
          br
          .page-header
        #resources-list
      
      #map
        h1 Locations
        #map-canvas
   
      br
  
