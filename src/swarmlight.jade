      input.btn.danger(type="button", value="Xmas Lights Off", onclick="javascript: xmaslightsoff()")

      br
      br

      .page-header

      // Traffic Light
      h2 Traffic Light

      br

      input.btn.danger(type="button", value="Red On", onclick="javascript: redon()")
      |    
      input.btn.danger(type="button", value="Red Off", onclick="javascript: redoff()")
      | 
      input.btn.alert-message(type="button", value="Yellow On", onclick="javascript: yellowon()")
      |    
      input.btn.alert-message(type="button", value="Yellow Off", onclick="javascript: yellowoff()")
      | 
      input.btn.success(type="button", value="Green On", onclick="javascript: greenon()")
      |    
      input.btn.success(type="button", value="Green Off", onclick="javascript: greenoff()")

